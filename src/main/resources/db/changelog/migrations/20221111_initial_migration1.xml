<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <!-- Create table users-->
    <changeSet author="FeinIV" id="20221111_initial_migration_1">
        <createTable tableName="users">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false" unique="true" />
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="middle_name" type="varchar(255)" />
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone" type="bigint">
                <constraints unique="true"/>
            </column>
            <column name="role" type="varchar(100)" />
        </createTable>
    </changeSet>

    <!-- Fill table users -->
    <changeSet author="FeinIV" id="20221111_initial_migration_2">
        <sql>
            INSERT INTO users (first_name, last_name, middle_name, email, phone, role)
            VALUES ('adminov', 'admin', 'adminovich', 'admin@gmail.com', 89233215470, 'administrator')
        </sql>
    </changeSet>

    <!-- Create table articles-->
    <changeSet author="FeinIV" id="20221111_initial_migration_3">
        <createTable tableName="articles">
            <column name="id" type="serial">
                <constraints primaryKey="true" nullable="false" unique="true" />
            </column>
            <column name="title" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="author" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="date" />
            <column name="deleted_at" type="date" />
        </createTable>
    </changeSet>

    <!-- Fill table articles-->
    <changeSet author="FeinIV" id="20221111_initial_migration_4">
        <sql>
            INSERT INTO articles (title, author, content, created_at)
            VALUES ('What do you think about rabbits?', 'Wolf', 'They are tasty', '2022-11-11'),
            ('What cat think about me?', 'Dog', 'He is so independent.. Stupid.', '2022-11-11'),
            ('How do you like my tail?', 'Fox', 'It is so red and fluffy', '2022-11-12')
        </sql>
    </changeSet>

</databaseChangeLog>